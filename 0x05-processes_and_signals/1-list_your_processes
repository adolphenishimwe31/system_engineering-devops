#!/usr/bin/env bash

# Display a human-readable, hierarchical list of all running processes

# Print header
echo "USER       PID %CPU %MEM    VSZ   RSS TTY      STAT START   TIME COMMAND"

# Show all processes in a tree structure with user-friendly info
ps -eo user,pid,pcpu,pmem,vsz,rss,tty,stat,start,time,cmd --forest --sort=ppid
